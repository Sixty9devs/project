floatingActionButton = findViewById(R.id.fav);
        floatingActionButton.setOnClickListener(new View.OnClickListener() {
				@Override
				public void onClick(View v) {
					if(is_active()){
						floatingActionButton.setImageResource(R.drawable.open);
						submitDisconnectIntent(RETAIN_AUTH);
				//		graph.stop();
						//status_view1.setText("disconnected");
					}else{
						floatingActionButton.setImageResource(R.drawable.close);
						//	if(new ConfigImpl(OpenVPNClient.this).getSshUsername().toString().isEmpty()){
						//account();
					//	graph.start();
						start_connect();
						return;
						//}else if(new ConfigImpl(OpenVPNClient.this).getSshPassword().toString().isEmpty()){
					}}
		
    });}
